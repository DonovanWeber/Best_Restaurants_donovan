@{
  Layout = "_Layout";
}


@using BestRestaurants.Models;
@model List<BestRestaurants.Models.Review>; 

<h1>Reviews</h1>

@if (@Model.Count == 0)
{
  <h3>No Reviews have been added!</h3>
}

<ul>
  @foreach (Review review in Model)
  {
    <li>
      @Html.DisplayFor(model => review.Rating): @Html.DisplayFor(model => review.ReviewText)
    </li>
  }
</ul>

<p>@Html.ActionLink("Leave a review", "Create")</p>
<p>@Html.ActionLink("Back to Restaurant", "Index", "Restaurants")</p>
<p>@Html.ActionLink("Home","Index", "Home")</p>